@model Backend6.Models.ForumMessage

@{
    ViewData["Title"] = "Delete";
}


<h2>Delete message</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creator.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ForumTopic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ForumTopic.Name)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-messageId="@Model.Id">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index" asp-controller="ForumTopics" asp-route-topicId="@Model.ForumTopicId">Back to topic</a>
        </div>
    </form>
</div>
