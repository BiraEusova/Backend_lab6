@model Backend6.Models.ForumTopic

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete topic</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creator.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Forum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Forum.Name)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-topicId="@Model.Id">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index" asp-controller="Forums" asp-route-forumId="@Model.ForumId">Back to forum topics</a>
        </div>
    </form>

</div>
